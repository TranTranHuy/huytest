{% extends 'admin.html.twig' %}

{% block title %}Staff{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 ">
    <h3 style="text-align: center; background: yellow">Staff Manager</h3> 
        <a href="{{path('staffAdd')}}">
            <button type="button" class="btn btn-outline-primary">Insert</button>
        </a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
                </div>

                <p>There are {{staff|length}} staffs in the list</p>

                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr style="background:#FFCCCC">
                            <th>Id</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Birthday</th>
                            <th>Address</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for s in staff %}
                              <tr>
                                  <td>{{ s.id}}</td>
                                  <td>{{ s.name}}</td>
                                  <td>{{ s.gender}}</td>
                                  <td>{{ s.birthday|date("d/m/Y")}}</td>
                                  <td>{{ s.address}}</td>
                                  <td>
                                    <a href="{{path('staffEdit',{'id':s.id})}}">Edit</a>
                                  <a href="{{path('staffDelete',{'id':s.id})}}">Delete</a></td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}

